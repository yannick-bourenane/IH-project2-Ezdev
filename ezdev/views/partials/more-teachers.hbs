<div class="all-boxes-same" id="boxes-teacher">
    {{#each fullteachers}}
    <a href="/teacher/{{this._id}}">
        <div class="box-same-teacher">
            <div class="box-img-same">
                <img src="{{this.avatar}}" alt="Picture of a teacher">
            </div>

            <div class="info-teacher-same">
                <div class="box-name-same">
                    <h3>{{this.firstname}} {{this.lastname}}</h3>
                </div>

                {{> average_review_each}}
                <div class="box-lg-same">
                    <ul>
                        {{#each this.id_languages}}
                        <li>
                            <div id="box-logo-same" title="{{this.name}}">
                                {{{this.logo}}}
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </a>
    {{/each}}
</div>