<div class="wrapper">
    {{>admin_nav}}
    <h1>Reviews of {{teacher.firstname}} {{teacher.lastname}}</h1>
    <table class="table teachers">
        <thead class="head">
            <tr>
                <th>Rate</th>
                <th>Message</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="body">

            {{#unless teacher.id_reviews}}
            <tr>
                <td colspan="8">no reviews</td>
            </tr>
            {{/unless}}

            {{#each teacher.id_reviews}}
            <tr>
                <td>
                    {{this.rate}}/5
                </td>
                <td>
                    {{this.message}}
                </td>
                <td>
                    <a class="fas fa-times" href="delete/{{this._id}}"></a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>