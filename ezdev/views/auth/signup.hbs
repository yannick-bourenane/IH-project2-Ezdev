{{#if isTeacher}}
<script type="module">
    document.getElementById('role_teacher').click();
</script>
{{/if}}
<form method="post" action="/auth/signup" class="form" enctype="multipart/form-data">
    <h1 class="title">Sign-up</h1>
    <div class="radios">
        <label class="radio" for="role_student">Student</label>
        <input type="radio" name="role" id="role_student" value="student" checked />
        <label class="radio" for="role_teacher">Teacher</label>
        <input type="radio" name="role" id="role_teacher" value="teacher" />
    </div>
    <div class="row">
        <label for="firstname">Firstname</label>
        <label for="lastname">Lastname</label>
        <input class="input" name="firstname" id="firstname" type="text" value="Jean" required>
        <input class="input" name="lastname" id="lastname" type="text" value="Dupont" required>
    </div>
    <div class="row">
        <label for="email">Email</label>
        <label for="password">Password</label>
        <input class="input" name="email" id="email" type="email" value="test@yopmail.com" required>
        <input class="input" id="password" name="password" type="password" value="12345" required>
    </div>
    <label for="phone">Phone</label>
    <input class="input" name="phone" id="phone" type="text" value="0606060606">
    <div class="row">
        <label for="avatar">Avatar</label>
        {{!-- <i id="avatar-icon" class="is-clickable toggle-active fa fa-user fa-lg"></i> --}}
        {{!-- <input id="input-file" type="file" class="is-hidden" name="avatar"> --}}
        <input id="input-file" type="file" name="avatar">
    </div>
    <div class="row">
        <label for="city">City</label>
        <label for="zipcode">Zipcode</label>
        <input class="input" name="city" id="city" type="text" value="Paris">
        <input class="input" name="zipcode" id="zipcode" type="text" value="75000">
    </div>
    <div id="teacher_inputs">
        <label for="price">Price (â‚¬/h)</label>
        <input class="input" name="price" id="price" type="number" value="" placeholder="hourly rate" disabled>
        <label for="description">Describe yourself</label>
        <textarea name="description" id="" cols="30" rows="10"></textarea>
        <label for="id_languages">Languages you can teach</label>
        <div id="languages">
            {{#each languages}}
            <div class="language_logo" title="{{this.name}}">
                {{{this.logo}}}
                <input type="hidden" name="id_languages" value="{{this.id}}" id="{{this.name}}" disabled>
            </div>
            {{/each}}
        </div>
    </div>
    <button class="btn">Submit</button>
    <hr>
    <p>
        Already have an account ? <a class="link" href="signin">please signin !</a>
    </p>
</form>